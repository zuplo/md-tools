{
  "include": ["src/**/*", "index.js"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "target": "ES2021",
    "module": "NodeNext",

    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "noImplicitOverride": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist"]
}
